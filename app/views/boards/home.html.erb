<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <span>Create Minessweeper Board</span>
      </div>
      <div class="card-body">
        <%= render 'form' %>
      </div>
    </div>

    <div class="card mt-5">
      <div class="card-header d-flex justify-content-between">
        <span>10 most recently generated boards</span>
      </div>
      <div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
            <th>ID</th>
            <th>Board Name</th>
            <th>Email</th>
            <th>Created At</th>
          </thead>
          <tbody>
            <%= render @boards %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex justify-content-center pt-3">
        <%= link_to 'View all generated boards', boards_path, class: 'btn btn-outline-success btn-block' %>
      </div>
    </div>
  </div>
</div>
